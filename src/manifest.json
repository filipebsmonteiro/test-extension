{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "{{chrome}}.action": {
    "default_popup": "src/popup/resources/index.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/popup/resources/index.html"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background/main.js",
    "{{firefox}}.scripts": ["src/background/main.js"]
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "run_at": "document_end",
    "js": ["src/content-script/resources/main.js"],
    "css": ["src/content-script/resources/assets/main.scss"]
  }],
  "permissions": [
    "*://*/*",
    "tabs",
    "scripting",
    "storage",
    "{{chrome}}.activeTab",
    "{{chrome}}.contextMenus",
    "{{firefox}}.<all_urls>"
  ]
}
